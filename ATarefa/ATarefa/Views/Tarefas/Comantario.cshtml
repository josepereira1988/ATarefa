
@model ComentarioDTO


@{
    ViewData["Title"] = "Novo Comentario";
}
<form asp-action="Comantario">
    <div class="py-2">
        <div class="card py-1 px-3">
            <div>
                Comentario tarefa Id : @Model.Id
            </div>
            <div class="form-group py-3">
                <select asp-for="Status">
                    @{
                        foreach (var statusValue in Enum.GetValues(typeof(Status)))
                        {
                            <option value="@statusValue">@statusValue</option>
                        }
                    }
                </select>
            </div>
           
            <input type="text" maxlength="50" class="form-control" asp-for="Id" hidden />
            <textarea rows="10" class="card-text w-100 px-2" asp-for="Comentario"></textarea>
            <div class="card-footer">
                <div class="px-1 py-2  d-flex justify-content-between">
                    <a class="btn btn-outline-secondary px-2" asp-action="Detalhe" asp-route-Id="@Model.Id">Voltar</a>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </div>
        </div>

    </div>
</form>