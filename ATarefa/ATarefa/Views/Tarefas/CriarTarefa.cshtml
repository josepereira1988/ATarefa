@model Tarefa

@{
    ViewData["Title"] = "Nova Tarefa";
}

<div class="cartao">
    <h5>Nova Tarefa</h5>
    <hr />
    <form asp-action="CriarTarefa">
        <div class="form-group">
            <label for="Titulo">Título</label>
            <input type="text" maxlength="50" class="form-control" asp-for="Titulo" required />
        </div>
        <div class="form-group">
            <label for="Descricao">Descrição</label>
            <textarea rows="10" class="form-control" maxlength="1000" id="Descricao" asp-for="Descricao" required>@Model.Descricao</textarea>
        </div>
        <div class="px-1 py-2 d-flex justify-content-between">
            <a class="btn btn-outline-secondary px-2" asp-action="Index">Voltar</a>
            <button type="submit" class="btn btn-outline-success">Salvar</button>
        </div>
    </form>
</div>


